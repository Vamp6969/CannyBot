  "version": "0.2.0",
  "configurations": [
    // launch a discord bot using yarn
    {
      "type": "node",
      "request": "launch",
      "name": "Discord Bot",
      "runtimeExecutable": "yarn",
      "args": ["run", "start"],
      "stopOnEntry": false,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
